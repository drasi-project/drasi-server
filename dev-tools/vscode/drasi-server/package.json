{
  "name": "drasi-server",
  "displayName": "Drasi Server",
  "publisher": "DrasiProject",
  "description": "The Drasi Server Visual Studio Code Extension",
  "version": "0.1.0",
  "icon": "resources/drasi.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/drasi-project/drasi-server.git"
  },
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.yaml",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "drasi-explorer",
          "title": "Drasi Server",
          "icon": "resources/drasi.svg"
        }
      ]
    },
    "views": {
      "drasi-explorer": [
        {
          "id": "drasi",
          "name": "Drasi"
        },
        {
          "id": "workspace",
          "name": "Workspace"
        }
      ]
    },
    "commands": [
      {
        "command": "workspace.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "drasi.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "workspace.resource.apply",
        "title": "Apply"
      },
      {
        "command": "editor.resource.apply",
        "title": "Apply"
      },
      {
        "command": "drasi.query.watch",
        "title": "Attach"
      },
      {
        "command": "drasi.resource.delete",
        "title": "Delete"
      },
      {
        "command": "drasi.source.start",
        "title": "Start Source"
      },
      {
        "command": "drasi.source.stop",
        "title": "Stop Source"
      },
      {
        "command": "drasi.query.start",
        "title": "Start Query"
      },
      {
        "command": "drasi.query.stop",
        "title": "Stop Query"
      },
      {
        "command": "drasi.reaction.start",
        "title": "Start Reaction"
      },
      {
        "command": "drasi.reaction.stop",
        "title": "Stop Reaction"
      },
      {
        "command": "drasi.instance.use",
        "title": "Set as current instance"
      },
      {
        "command": "drasi.connection.configure",
        "title": "Edit server URL"
      },
      {
        "command": "drasi.connection.add",
        "title": "Add server"
      },
      {
        "command": "drasi.connection.use",
        "title": "Use server"
      },
        {
          "command": "drasi.schema.refresh",
          "category": "Drasi Server",
          "title": "Refresh Schemas"
        },
        {
          "command": "drasi.schema.useConnection",
          "category": "Drasi Server",
          "title": "Use Server for Schemas"
        },
        {
          "command": "drasi.schema.toggleFile",
          "category": "Drasi Server",
          "title": "Drasi Config"
        },
        {
          "command": "drasi.yaml.createSource",
          "category": "Drasi Server",
          "title": "Create Source YAML"
        },
        {
          "command": "drasi.yaml.createQuery",
          "category": "Drasi Server",
          "title": "Create Query YAML"
        },
        {
          "command": "drasi.yaml.createReaction",
          "category": "Drasi Server",
          "title": "Create Reaction YAML"
        }
      ],
    "menus": {
      "view/title": [
        {
          "command": "workspace.refresh",
          "when": "view == workspace",
          "group": "navigation"
        },
        {
          "command": "drasi.refresh",
          "when": "view == drasi",
          "group": "navigation"
        },
        {
          "command": "drasi.connection.add",
          "when": "view == drasi",
          "group": "navigation"
        },
        {
          "command": "drasi.schema.useConnection",
          "when": "view == drasi",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "workspace.resource.apply",
          "when": "view == workspace && (viewItem == workspace.queryNode || viewItem == workspace.sourceNode || viewItem == workspace.reactionNode)",
          "group": "inline"
        },
        {
          "command": "drasi.query.watch",
          "when": "view == drasi && viewItem == drasi.queryNode",
          "group": "inline"
        },
        {
          "command": "drasi.query.start",
          "when": "view == drasi && viewItem == drasi.queryNode",
          "group": "inline"
        },
        {
          "command": "drasi.query.stop",
          "when": "view == drasi && viewItem == drasi.queryNode",
          "group": "inline"
        },
        {
          "command": "drasi.source.start",
          "when": "view == drasi && viewItem == drasi.sourceNode",
          "group": "inline"
        },
        {
          "command": "drasi.source.stop",
          "when": "view == drasi && viewItem == drasi.sourceNode",
          "group": "inline"
        },
        {
          "command": "drasi.reaction.start",
          "when": "view == drasi && viewItem == drasi.reactionNode",
          "group": "inline"
        },
        {
          "command": "drasi.reaction.stop",
          "when": "view == drasi && viewItem == drasi.reactionNode",
          "group": "inline"
        },
        {
          "command": "drasi.resource.delete",
          "when": "view == drasi && (viewItem == drasi.queryNode || viewItem == drasi.sourceNode || viewItem == drasi.reactionNode)",
          "group": "inline"
        },
        {
          "command": "drasi.connection.use",
          "when": "view == drasi && viewItem == drasi.connectionNode",
          "group": "inline"
        },
        {
          "command": "drasi.connection.add",
          "when": "view == drasi && viewItem == drasi.connectionNode",
          "group": "navigation"
        },
        {
          "command": "drasi.connection.configure",
          "when": "view == drasi && viewItem == drasi.connectionNode",
          "group": "navigation"
        },
        {
          "command": "drasi.instance.use",
          "when": "view == drasi && viewItem == drasi.instanceNode"
        }
      ],
      "editor/context": [
        {
          "command": "drasi.schema.toggleFile",
          "when": "resourceLangId == yaml",
          "group": "navigation@1"
        },
        {
          "command": "drasi.yaml.createSource",
          "when": "resourceLangId == yaml",
          "group": "navigation@2"
        },
        {
          "command": "drasi.yaml.createQuery",
          "when": "resourceLangId == yaml",
          "group": "navigation@2"
        },
        {
          "command": "drasi.yaml.createReaction",
          "when": "resourceLangId == yaml",
          "group": "navigation@2"
        }
      ],
      "editor/context.palette": [
        {
          "command": "drasi.schema.toggleFile",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        },
        {
          "command": "drasi.yaml.createSource",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        },
        {
          "command": "drasi.yaml.createQuery",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        },
        {
          "command": "drasi.yaml.createReaction",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "drasi.connection.add",
          "when": "true"
        },
        {
          "command": "drasi.connection.configure",
          "when": "true"
        },
        {
          "command": "drasi.connection.use",
          "when": "true"
        },
        {
          "command": "drasi.schema.toggleFile",
          "when": "resourceLangId == yaml"
        },
        {
          "command": "drasi.yaml.createSource",
          "when": "resourceLangId == yaml"
        },
        {
          "command": "drasi.yaml.createQuery",
          "when": "resourceLangId == yaml"
        },
        {
          "command": "drasi.yaml.createReaction",
          "when": "resourceLangId == yaml"
        }
      ]
    },
    "configuration": {
      "title": "Drasi Server",
      "properties": {
        "drasiServer.url": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "Base URL for the Drasi Server API."
        },
        "drasiServer.instanceId": {
          "type": "string",
          "default": "",
          "description": "Optional instance ID to use. If empty, the first instance is selected."
        },
        "drasiServer.connections": {
          "type": "array",
          "default": [],
          "description": "Saved Drasi Server connections.",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "url": { "type": "string" },
              "instanceId": { "type": "string" }
            }
          }
        },
        "drasiServer.currentConnectionId": {
          "type": "string",
          "default": "",
          "description": "Active Drasi Server connection ID."
        },
        "drasiServer.schemaFiles": {
          "type": "array",
          "default": [],
          "description": "Workspace-relative YAML files to treat as Drasi configs.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "scripts": {
    "vscode:prepublish": "NODE_ENV=production node ./esbuild.js",
    "compile": "node ./esbuild.js",
    "package": "vsce package",
    "watch": "node ./esbuild.js --watch",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "@vscode/vsce": "^2.31.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.56.0",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "ts-mockito": "^2.6.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "ajv": "^8.12.0",
    "axios": "^1.8.2",
    "js-yaml": "^4.1.0",
    "yaml": "^2.6.0"
  }
}
