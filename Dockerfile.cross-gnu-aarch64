FROM ghcr.io/cross-rs/aarch64-unknown-linux-gnu:0.2.5

# Install project-specific build dependencies on top of the stock cross image
# The cross image already has the aarch64 cross-compiler and sysroot
ENV DEBIAN_FRONTEND=noninteractive
RUN dpkg --add-architecture arm64 \
    && apt-get update && apt-get install -y --no-install-recommends \
    perl make protobuf-compiler libprotobuf-dev \
    libclang-dev \
    libjq-dev:arm64 libonig-dev:arm64 \
    && rm -rf /var/lib/apt/lists/*
