FROM ghcr.io/cross-rs/x86_64-unknown-linux-gnu:0.2.5

# Install project-specific build dependencies on top of the stock cross image
# (gcc, g++, pkg-config, etc. are already in the cross base image)
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y --no-install-recommends \
    perl make protobuf-compiler libprotobuf-dev \
    libclang-dev libjq-dev libonig-dev \
    && rm -rf /var/lib/apt/lists/*
